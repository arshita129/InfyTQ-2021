class Customer:
    def __init__(self,name,amount):
        self.customer_name=name
        self.bill_amount=amount
        
    def purchases():
        amount=self.bill_amount-self.bill_amount*5/100
        pays_bill(amount)
        
    def pays_bill(amount):
        print(self.customer_name,"pays bill amount of Rs.",amount)
    
